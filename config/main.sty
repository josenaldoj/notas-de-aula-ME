%
%   Configurações gerais
%

% Definição do tamanho do espaçamento entre as linhas do texto
\onehalfspacing


%
%   Bibliografia
%

% Carrega a bibliografia presente no arquivo .bib
\addbibresource{./res/bib/bibliography.bib}


%
%   Contadores de Capítulo, Seção e Subseção
%

% Define que a numeração dos títulos das seções de profundidade até subsubseções
\setcounter{secnumdepth}{3}

% Imprime na tabela de conteúdos os títulos de profundidade até subsubseções
\setcounter{tocdepth}{3}


%
%   Estilo das tabelas e imagens
%

% Estilo da legenda de todas as figuras e tabelas
\captionsetup{
    labelfont=bf,            % Nome em Negrito
    labelsep=period,         % Nome terminado com um ponto final.
    justification=centering, % Texto centralizado
    margin=40pt              % Espaçamento horizontal mínimo na direita e esquerda
}

% Estilo da legenda das figuras
\captionsetup[figure]{
    name=Imagem              % Nome alterado de Figura para Imagem 
}


%
%   Listas
%

% Definição do estilo da lista de enumeração padrão (enumerate)
% Mais detalhes na documentação do pacote enumitem
\setlist[enumerate,1]
{
    label = \emph{\roman*}.,
    ref   = \emph{\roman*}
}
\setlist[enumerate,2]
{
    label = \emph{\alph*}),
    ref   = \theenumi.\emph{\alph*})
}
\setlist[enumerate,3]
{
    label = \arabic*),
    ref   = \theenumii.\arabic*
}
