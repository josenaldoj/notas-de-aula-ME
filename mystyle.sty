\onehalfspacing % line spacing

% magic code to insert new line between header and first itemm
\def\enumfix{%
\if@inlabel
 \noindent \par\nobreak\vskip-\topsep\hrule\@height\z@
\fi}
\let\olditemize\itemize
\def\itemize{\enumfix\olditemize}

% change itemize bullet character
\renewcommand{\labelitemi}{\adfrightarrowhead}

% spacing for lists
\renewcommand{\@listI}{%
\leftmargin=0pt
\rightmargin=0pt
\labelsep=5pt
\labelwidth=20pt
\itemindent=0pt
%\listparindent=\parindent %indentation at the beginning of paragraph
\topsep=0pt plus 2pt minus 4pt
\partopsep=0pt plus 1pt minus 1pt
\parsep=0pt plus 1pt
\itemsep=0pt}

% change caption label formatting
\captionsetup[table]{labelfont=bf, labelsep=period}
\captionsetup[figure]{labelfont=bf, labelsep=period}

% standard label config for enumerate
\setenumerate{label=\roman*.,leftmargin=*,align=left}
\setlist[itemize]{leftmargin=*}

