\onehalfspacing % line spacing

% magic code to insert new line between header and first itemm
\def\enumfix{%
\if@inlabel
 \noindent \par\nobreak\vskip-\topsep\hrule\@height\z@
\fi}
\let\olditemize\itemize
\def\itemize{\enumfix\olditemize}

% change itemize bullet character
\renewcommand{\labelitemi}{\adfrightarrowhead}

% spacing for lists
\renewcommand{\@listI}{%
\leftmargin=0pt
\rightmargin=0pt
\labelsep=5pt
\labelwidth=20pt
\itemindent=0pt
%\listparindent=\parindent %indentation at the beginning of paragraph
\topsep=0pt plus 2pt minus 4pt
\partopsep=0pt plus 1pt minus 1pt
\parsep=0pt plus 1pt
\itemsep=0pt}

% change caption label formatting
\captionsetup[table]{labelfont=bf, labelsep=period}
\captionsetup[figure]{labelfont=bf, labelsep=period}

% standard label config for enumerate
\setenumerate{label=\roman*.,leftmargin=*,align=left}
\setlist[itemize]{leftmargin=*}

%%%%%%%%% custom environments %%%%%%%%%%%%%%%%%%%%%%%%%%%%

\NewEnviron{nofleqn}[1]{\@fleqnfalse\begin{#1}\BODY\end{#1}}

% theorem environments -----------------------------------------------------------------------------------

\newtheoremstyle{brremark}% name
  {}%         Space above, empty = `usual value'
  {}%         Space below
  {}% Body font
  {}%         Indent amount (empty = no indent, \parindent = para indent)
  {\itshape}% Thm head font
  {.}%        Punctuation after thm head
  {\newline}% Space after thm head: \newline = linebreak
  {}%         Thm head spec

% starts in new line
\newenvironment{brproof}[1][\proofname]{\proof[#1]\mbox{}\\*}{\endproof}

\theoremstyle{brremark}
\newtheorem*{brsolution}{Solução}

% corollary
\theoremstyle{definition}
\newtheorem{corollary}{Corolário}[chapter]

% definition
\theoremstyle{definition}
\newtheorem{definition}[corollary]{Definição}

% equivalence
\theoremstyle{definition}
\newtheorem{equivalence}[corollary]{Equivalência}

% example
\theoremstyle{definition}
\newtheorem{example}[corollary]{Exemplo} 

% exercise
\theoremstyle{definition}
\newtheorem{exercise}{Exercício}
\counterwithin*{exercise}{section}

% lemma
\theoremstyle{plain}
\newtheorem{lemma}[corollary]{Lema} 

% onlineact
\theoremstyle{definition}
\newtheorem{onlineact}[corollary]{Atividade online} 

% problem
\theoremstyle{definition}
\newtheorem{problem}[corollary]{Problema}

% proposition
\theoremstyle{definition}
\newtheorem{proposition}[corollary]{Proposição} 

% remark
\theoremstyle{remark}
\newtheorem*{remark}{Observação}

% homework
\theoremstyle{remark}
