% tip
\theoremstyle{remark}
\newtheorem*{tip}{Dica}

% solution
\theoremstyle{remark}
\newtheorem*{solution}{Solução}

% theorem
\theoremstyle{definition}
\newtheorem{theorem}[corollary]{Teorema}

