all: help

help:
	@echo "there are all options for make:"
	@echo -e "build\t\t- compile the pdf file."
	@echo -e "clean\t\t- remove all files generated by build option."
	@echo -e "help\t\t- show this message."

build: clean
	pdflatex main.tex
	biber main
	pdflatex main.tex

clean:
	rm -rf main.aux main.log main.out main.toc main.pdf
	rm -rf main.bbl main.bcf main.blg main.run.xml
